<?xml version="1.0" encoding="UTF-8"?>

<typesystem package="KTextEditor">

    <load-typesystem name="typesystem_core.xml" generate="no" />

    <load-typesystem name="typesystem_widgets.xml" generate="no"/>

    <!-- Root namespace for KTextEditor -->
    <namespace-type name="KTextEditor">

        <!-- Editor class -->
        <object-type name="Editor">
        </object-type>

        <!-- Document class -->
        <object-type name="Document">
        </object-type>

        <!-- View class -->
        <object-type name="View">
        </object-type>

        <!-- Cursor class -->
        <object-type name="Cursor">
        </object-type>

        <!-- Moving enums into namespace as needed -->
        <enum-type name="EditorOption">
            <!--
            <value name="OverwriteMode"/>
            <value name="ReadOnly"/>
            -->
        </enum-type>

    </namespace-type>

</typesystem>
